<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/classificationIconImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ssssssss"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/classificationIconImageView"
        app:layout_constraintLeft_toLeftOf="@+id/classificationIconImageView"
        app:layout_constraintRight_toRightOf="@+id/classificationIconImageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>