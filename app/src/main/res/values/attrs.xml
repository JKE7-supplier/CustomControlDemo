<resources>
    <!-- CircleImageView Style -->
    <declare-styleable name="CircleImageView">
        <attr name="mTileX" />
        <attr name="mTileY" />
        <attr name="createBorder" format="boolean" />
        <attr name="mBorderColor" format="color" />
        <attr name="mBorderWidth" format="dimension" />
        <attr name="mShapeType" />
        <attr name="mRoundRadius" format="dimension" />
    </declare-styleable>
    <attr name="mShapeType">
        <enum name="rounded_rect" value="1" />
        <enum name="circle" value="2" />
    </attr>
    <attr name="mTileX">
        <enum name="clamp" value="0" />
        <enum name="mirror" value="1" />
        <enum name="repeat" value="2" />
    </attr>
    <attr name="mTileY">
        <enum name="clamp" value="0" />
        <enum name="mirror" value="1" />
        <enum name="repeat" value="2" />
    </attr>

    <declare-styleable name="BlurryView">
        <attr name="blurry_radius" format="dimension"/> <!--模糊半径（模糊程度）-->
        <attr name="blurry_color"  format="color" />  <!--覆盖颜色-->
        <attr name="blurry_factor" format="float"/>
    </declare-styleable>

    <declare-styleable name="RoundedCornerWithBorderImageViewStyle">
        <!-- 描边宽度-->
        <attr name="border_width" format="dimension"/>
        <!-- 描边颜色-->
        <attr name="border_color" format="color"/>
        <!-- 进度条颜色-->
        <attr name="progress_color" format="color"/>
        <!-- 进度条进度-->
        <attr name="progress_border" format="integer"/>
        <!--圆角大小-->
        <attr name="corner_radius" format="dimension"/>
        <!--左上圆角大小-->
        <attr name="leftTop_corner_radius" format="dimension"/>
        <!--右上圆角大小-->
        <attr name="rightTop_corner_radius" format="dimension"/>
        <!--左下圆角大小-->
        <attr name="leftBottom_corner_radius" format="dimension"/>
        <!--右下圆角大小-->
        <attr name="rightBottom_corner_radius" format="dimension"/>
        <!--图片类型：圆角或者圆形-->
        <attr name="imageViewStyle" format="enum">
            <enum name="oval" value="2"/>
            <enum name="round" value="1"/>
            <enum name="circle" value="0"/>
        </attr>
    </declare-styleable>
</resources>